<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_cart">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/layout_shape_gradient"
                android:id="@+id/layout_cart_title">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="购物车"
                    android:textSize="17sp"
                    android:textColor="#ffffff"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/layout_cart_manage">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管理"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_cart_manage"/>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
        <com.qr.bymall.view.MWebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shopping_cart_wv"
            android:background="#f5f5f5"
            ></com.qr.bymall.view.MWebView>
    </LinearLayout>
    <include
        layout="@layout/layout_net"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_cart_net"></include>

</RelativeLayout>
