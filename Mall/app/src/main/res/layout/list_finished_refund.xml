<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="自营"
                android:textSize="11sp"
                android:textColor="#ca4553"
                android:id="@+id/tv_finished_refund_store"/>

        </RelativeLayout>
        <com.qr.bymall.view.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:id="@+id/lv_finished_refund"></com.qr.bymall.view.MyListView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="退款总金额："
                android:textSize="12sp"
                android:textColor="#444444"
                android:id="@+id/tv_finished_refund_tv1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_finished_refund_tv1"
                android:layout_marginLeft="2dp"
                android:text="¥0.0"
                android:textSize="12sp"
                android:textColor="#ca4553"
                android:id="@+id/tv_finished_refund_money"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:id="@+id/layout_finished_refund_reason"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="退款失败原因："
                android:textSize="12sp"
                android:textColor="#444444"
                android:id="@+id/tv_finished_refund_tv2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_finished_refund_tv2"
                android:text="商品已经派送无法退回"
                android:textSize="12sp"
                android:textColor="#444444"
                android:id="@+id/tv_finished_refund_reason"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/refund_item_ic"
                android:id="@+id/iv_finished_refund"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_finished_refund"
                android:layout_marginLeft="5dp"
                android:text="退款成功"
                android:textSize="12sp"
                android:textColor="#444444"
                android:id="@+id/tv_finished_refund_result"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
