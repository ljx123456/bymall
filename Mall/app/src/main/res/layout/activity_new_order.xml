<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/layout_shape_gradient">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/new_order_back">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/back_default_ic"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="确认订单"
            android:textSize="17sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:id="@+id/layout_new_order_bottom">
            <TextView
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text="提交订单"
                android:gravity="center"
                android:background="@drawable/layout_shape_gradient"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:id="@+id/tv_new_order_buy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_new_order_buy"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="#ca4553"
                android:text="0.00"
                android:id="@+id/tv_new_order_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_new_order_money"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="#ca4553"
                android:text="¥"
                android:id="@+id/tv_new_order_tv2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_new_order_tv2"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:text="合计 ："
                android:textSize="17sp"
                android:textColor="#434343"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/layout_new_order_bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="#ffffff">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_new_order_address_none"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/add_address_ic"
                            android:scaleType="centerInside"
                            android:id="@+id/iv_new_order_add_address"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iv_new_order_add_address"
                            android:layout_marginLeft="9dp"
                            android:text="请选择一个收货地址"
                            android:textColor="#555555"
                            android:textSize="14sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="106dp"
                        android:layout_toLeftOf="@+id/iv_new_order_address_skip"
                        android:id="@+id/layout_new_order_address"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:src="@drawable/address_location_ic"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="59dp"
                            android:layout_marginTop="10dp"
                            android:text="收货人：柚子"
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:id="@+id/tv_new_order_address_consignee"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13dp"
                            android:layout_marginLeft="59dp"
                            android:layout_below="@+id/tv_new_order_address_consignee"
                            android:layout_marginTop="6dp"
                            android:text="收货地址：成都师范学院二号公寓2A603"
                            android:maxLines="2"
                            android:textColor="#555555"
                            android:textSize="12sp"
                            android:id="@+id/tv_new_order_address_address"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13dp"
                            android:text="18684000453"
                            android:layout_alignParentEnd="true"
                            android:layout_alignBottom="@+id/tv_new_order_address_consignee"
                            android:textColor="#555555"
                            android:textSize="11sp"
                            android:id="@+id/tv_new_order_address_phone"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_new_order_address_address"
                            android:layout_marginLeft="59dp"
                            android:layout_marginTop="4dp"
                            android:text="（请详细核对收货地址,晚上宿舍关门后只配送本栋宿舍）"
                            android:textColor="#ca4553"
                            android:textSize="8sp"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/skip_ic"
                        android:scaleType="centerInside"
                        android:id="@+id/iv_new_order_address_skip"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="全校"
                        android:textColor="#ca4553"
                        android:textSize="12sp"
                        android:id="@+id/tv_new_order_store"/>
                </RelativeLayout>
                <com.qr.bymall.view.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:id="@+id/lv_new_order">
                </com.qr.bymall.view.MyListView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="#ffffff"
                    android:id="@+id/layout_new_order_coupon">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="优惠券"
                        android:textSize="12sp"
                        android:textColor="#555555"/>
                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/skip_ic"
                        android:scaleType="centerInside"
                        android:id="@+id/iv_new_order_coupon_skip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_new_order_coupon_skip"
                        android:layout_marginRight="9dp"
                        android:text="有券可用"
                        android:textColor="#ca4553"
                        android:textSize="12sp"
                        android:id="@+id/tv_new_order_coupon_title"
                        android:visibility="visible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:text="配送费"
                        android:textColor="#555555"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:text="¥2.00"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:id="@+id/tv_new_order_fee"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="50.00"
                        android:textColor="#ca4553"
                        android:textSize="18sp"
                        android:id="@+id/tv_new_order_total"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_new_order_total"
                        android:layout_centerVertical="true"
                        android:text="¥"
                        android:textColor="#ca4553"
                        android:textSize="18sp"
                        android:id="@+id/tv_new_order_tv1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_new_order_tv1"
                        android:layout_marginRight="2dp"
                        android:text="小计："
                        android:textColor="#555555"
                        android:textSize="11sp"
                        android:id="@+id/tv_new_order_sub"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_new_order_sub"
                        android:layout_marginRight="7dp"
                        android:text="共2件商品"
                        android:textColor="#555555"
                        android:textSize="11sp"
                        android:id="@+id/tv_new_order_num"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
