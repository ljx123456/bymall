<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/layout_shape_gradient">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/suggest_back">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/back_default_ic"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textSize="17sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:background="#ffffff"
            android:hint="请留下您的宝贵意见和建议，我们将努力改进（不少于5字）"
            android:textSize="12sp"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:maxLength="50"
            android:textColorHint="#9c9c9c"
            android:textColor="#555555"
            android:inputType="textMultiLine"
            android:theme="@style/MyEditText"
            android:id="@+id/edt_suggestion"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="13dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="手机号"
                android:textSize="14sp"
                android:textColor="#555555"
                android:id="@+id/tv_suggest_tv1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tv_suggest_tv1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请留下手机号，以便我们联系您"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColorHint="#9c9c9c"
                android:textColor="#555555"
                android:maxLength="11"
                android:inputType="phone"
                android:theme="@style/MyEditText"
                android:id="@+id/edt_suggestion_phone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff"
                android:layout_alignParentBottom="true"
                android:text="提交"
                android:textSize="19sp"
                android:textColor="#ca4553"
                android:gravity="center"
                android:id="@+id/tv_suggest"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
