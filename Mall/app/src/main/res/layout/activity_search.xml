<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/layout_shape_gradient">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/search_back">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/back_default_ic"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:id="@+id/layout_search"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/search_back"
            android:paddingLeft="5dp"
            android:layout_marginRight="68dp"
            android:layout_centerVertical="true"
            android:background="@drawable/layout_search_bg"
            android:drawableLeft="@drawable/search_ic"
            android:hint="美食"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:textColorHint="#bcbcbc"
            android:textColor="#444444"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"
            android:theme="@style/MyEditText"
            android:id="@+id/edt_search"/>
    </RelativeLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_wv"></WebView>
</LinearLayout>
