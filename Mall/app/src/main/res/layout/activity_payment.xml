<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/layout_shape_gradient">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/payment_back">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/back_default_ic"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择支付方式"
            android:textSize="17sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="50.00"
                android:textColor="#ca4553"
                android:textSize="18sp"
                android:id="@+id/tv_payment_total"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_payment_total"
                android:layout_centerVertical="true"
                android:text="¥"
                android:textColor="#ca4553"
                android:textSize="18sp"
                android:id="@+id/tv_payment_tv1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_payment_tv1"
                android:layout_marginRight="2dp"
                android:text="需支付："
                android:textColor="#555555"
                android:textSize="11sp"
                android:id="@+id/tv_payment_sub"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="支付方式"
                android:textColor="#555555"
                android:textSize="12sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:id="@+id/layout_payment_wallet"
            android:clickable="true">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:src="@drawable/wallet_pay_ic"
                android:scaleType="centerInside"
                android:id="@+id/iv_payment_wallet"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_payment_wallet"
                android:layout_marginLeft="19dp"
                android:text="余额支付"
                android:textColor="#555555"
                android:textSize="12sp"
                android:id="@+id/tv_payment_wallet_tv1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_payment_wallet_tv1"
                android:layout_alignBottom="@id/tv_payment_wallet_tv1"
                android:text="（可用余额：¥0.00）"
                android:textSize="8sp"
                android:textColor="#ca4553"
                android:id="@+id/tv_payment_wallet_money"/>
            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                style="@style/CustomCheckboxTheme"
                android:id="@+id/checkbox_payment_wallet"
                android:enabled="false"
                android:checked="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:id="@+id/layout_payment_alipay"
            android:clickable="true">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:src="@drawable/alipay_ic"
                android:scaleType="centerInside"
                android:id="@+id/iv_payment_alipay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_payment_alipay"
                android:layout_marginLeft="19dp"
                android:text="支付宝支付"
                android:textColor="#555555"
                android:textSize="12sp"/>
            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                style="@style/CustomCheckboxTheme"
                android:id="@+id/checkbox_payment_alipay"
                android:enabled="false"
                android:checked="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:id="@+id/layout_payment_wechat"
            android:clickable="true">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:src="@drawable/wechat_ic"
                android:scaleType="centerInside"
                android:id="@+id/iv_payment_wechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_payment_wechat"
                android:layout_marginLeft="19dp"
                android:text="微信支付"
                android:textColor="#555555"
                android:textSize="12sp"/>
            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                style="@style/CustomCheckboxTheme"
                android:id="@+id/checkbox_payment_wechat"
                android:enabled="false"
                android:checked="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:gravity="center"
                android:text="确认支付"
                android:textSize="19sp"
                android:textColor="#ca4553"
                android:id="@+id/tv_payment_pay"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
