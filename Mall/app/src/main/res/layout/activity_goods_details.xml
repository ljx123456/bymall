<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/layout_goods_details_title"
        android:background="@drawable/layout_shape_gradient"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/goods_details_back">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/back_default_ic"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_goods_details_tab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="商品"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:id="@+id/tv_goods_details_tab_goods"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_goods_details_tab_goods"
                android:layout_marginLeft="23dp"
                android:text="详情"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:id="@+id/tv_goods_details_tab_details"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_goods_details_tab_details"
                android:layout_marginLeft="23dp"
                android:text="推荐"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:id="@+id/tv_goods_details_tab_recommend"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:id="@+id/layout_goods_details_share"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:src="@drawable/share_default_ic"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_goods_details_share"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/layout_goods_details_title_bg"
            android:background="#80000000"
            android:visibility="gone"></RelativeLayout>
        <com.qr.bymall.view.MWebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wv_goods_details"
            android:background="#f5f5f5"
            ></com.qr.bymall.view.MWebView>
    </LinearLayout>


</LinearLayout>
