<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/layout_shape_gradient">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/forget_back">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/back_default_ic"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="找回密码"
            android:textSize="17sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#444444"
            android:textColorHint="#d9d7d7"
            android:textSize="14sp"
            android:theme="@style/MyEditText"
            android:background="#ffffff"
            android:id="@+id/edt_forget_phone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="150dp"
                android:paddingLeft="20dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#444444"
                android:textColorHint="#d9d7d7"
                android:textSize="14sp"
                android:theme="@style/MyEditText"
                android:background="@null"
                android:id="@+id/edt_forget_code"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="获取验证码"
                android:textColor="#80ca4553"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:id="@+id/tv_forget_code"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#ffffff">
            <RelativeLayout
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:id="@+id/layout_forget_look1">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="5dp"
                    android:src="@drawable/look_ic"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/layout_forget_look1"
                android:layout_marginRight="80dp"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"
                android:textColor="#444444"
                android:textColorHint="#d9d7d7"
                android:hint="请输入新密码(6位及以上)"
                android:textSize="14sp"
                android:background="@null"
                android:id="@+id/edt_forget_password"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#ffffff">
            <RelativeLayout
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:id="@+id/layout_forget_look2">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="5dp"
                    android:src="@drawable/look_ic"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/layout_forget_look2"
                android:layout_marginRight="80dp"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"
                android:textColor="#444444"
                android:textColorHint="#d9d7d7"
                android:hint="确认密码"
                android:textSize="14sp"
                android:background="@null"
                android:id="@+id/edt_forget_password_sure"/>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="完   成"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_login_style"
            android:id="@+id/btn_forget"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>
