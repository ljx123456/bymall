<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shape_gradient"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/layout_shape_gradient">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="支付成功"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:id="@+id/tv_pay_result_title"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_shape_gradient">

        <com.qr.bymall.view.MWebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_pay_result"
            android:id="@+id/pay_result_wv"></com.qr.bymall.view.MWebView>
    </RelativeLayout>

</LinearLayout>
